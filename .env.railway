# Variables d'environnement pour la production (Railway)
# Configurez ces variables dans Railway Dashboard

# Configuration de l'application
NODE_ENV=production
PORT=3001

# Configuration MongoDB (Railway avec MongoDB service)
# Railway va automatiquement fournir ces variables si vous utilisez MongoDB plugin
# Ou configurez-les manuellement avec votre URI MongoDB externe
MONGODB_URI=mongodb://username:password@host:port/database

# Configuration JWT - CHANGEZ CES VALEURS EN PRODUCTION
JWT_SECRET=votre_secret_jwt_super_securise_changez_en_production_railway
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Configuration CORS - Ajoutez votre domaine Railway
CORS_ORIGIN=https://your-app.railway.app,http://localhost:3000

# Configuration Rate Limiting
RATE_LIMIT_MAX=100

# Optionnel : pour debug
DEBUG=true