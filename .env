# Variables d'environnement pour Docker
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration de l'application
NODE_ENV=production
PORT=3001

# Configuration MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGODB_DB_NAME=bibliotheque
MONGODB_URI=mongodb://admin:password123@localhost:27017/bibliotheque?authSource=admin

# Configuration JWT
JWT_SECRET=votre_secret_jwt_super_securise_changez_en_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Configuration CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configuration Rate Limiting
RATE_LIMIT_MAX=100

# Configuration Mongo Express (pour le d√©veloppement)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123